{
  "name": "twitchcommandplate",
  "version": "1.0.0",
  "description": "Command Plate for Twitch",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "build": {
    "appId": "TwitchCommandPlate",
    "mac": {
      "category": "your.app.category.type"
    },
    "target": "NSIS",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Max Kusatz",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "tmi": "^2.0.0",
    "tmi.js": "^1.8.5"
  }
}
